<div class="d-flex">
  <div class="p-2 flex-grow-1"><h2><%= @article.title %></h2></div>
  <div class="p-2"><%= link_to '<i class="fa-solid fa-file-pen"></i>'.html_safe, edit_article_path, class: "link" %></div>
  <div class="p-2"><%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, article_path(@article),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "link" %></div>
</div>
<hr>
<p><%= @article.content %></p>
